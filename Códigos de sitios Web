// Ejemplo simple de JavaScript para cambiar el color de fondo al hacer clic en un botón

document.addEventListener('DOMContentLoaded', function() {
    var cambiarColorBoton = document.getElementById('cambiar-color-boton');
    var body = document.body;

    cambiarColorBoton.addEventListener('click', function() {
        var color = prompt('Ingrese un color hexadecimal (#RRGGBB):', '#ffffff');
        body.style.backgroundColor = color;
    });
});

